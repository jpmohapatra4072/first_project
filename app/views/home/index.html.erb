			<div class="jumbotron" style="margin-top: 8%;width: 60%;margin-left: 20%;">
				<%if user_signed_in?%>
					<h4>Hii <%= current_user.try(:first_name)%></h4>
					<h4><%= link_to('Logout', destroy_user_session_path, method: :delete) %> </h4>
				<%else%>
					<h3>Welcome</h3>
					<h4><%= link_to('Login', new_user_session_path) %> if you already have registered or <%= link_to('Sign Up', new_user_registration_path) %> to register</h4>
					<h4><%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %> or <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %></h4>
				<%end%>
			</div>
