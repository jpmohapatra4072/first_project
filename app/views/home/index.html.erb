				<%#end%>
			<!-- </div> -->
			<%if @artist_list.present?%>
				<table class="table table-bordered table-striped" style="width: 80%">
					<thead>
						<th>First Name</th>
						<th>Role</th>
					</thead>
					<tbody>
						<%@artist_list.each do |curr_obj|%>
							<tr>
								<td>
									<%= link_to "#{curr_obj.first_name} #{curr_obj.last_name}", artist_profile_path(id: curr_obj.id)%>
								</td>
								<td>
									<%= curr_obj.role.try(:name)%>
								</td>
							</tr>
						<%end%>
					</tbody>
				</table>
			<%else%>
				No Artist Present!!
			<%end%>
		</div>
